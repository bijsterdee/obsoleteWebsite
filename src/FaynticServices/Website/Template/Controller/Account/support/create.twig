<div class="panel panel-default">
    {% include 'Helper/Status.twig' %}
    <div class="panel-heading">
        <span class="icon-tag4"></span> Ticket aanmaken
    </div>
    <div class="panel-body">
        <form class="form-horizontal" method="post" action="/account/support/create/">
            <div class="form-group">
                <label class="col-md-3 control-label">Onderwerp</label>
                <div class="col-md-9">
                    <input name="subject" class="form-control" type="text"/>
                    <span class="form-control-feedback"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Beschrijving</label>

                <div class="col-md-9">
                    <textarea class="form-control" rows="5" name="comment">{{ request.message }}</textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-9 col-md-offset-3">
                    <button type="submit" class="btn btn-primary"><span class="icon-disk"></span> Verzoek indienen</button>
                    <a href="//{{ server.http_host }}/account/support/" class="btn btn-default pull-right"><span class="icon-undo2"></span> Annuleren</a>
                </div>
            </div>
        </form>
    </div>
</div>
