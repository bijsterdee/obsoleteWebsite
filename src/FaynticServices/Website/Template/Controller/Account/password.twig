<div class="col-md-offset-3 col-md-6">
    {% include 'Helper/Status.twig' %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="icon-key"></span>
            Wachtwoord wijzigen
        </div>
        <div class="panel-body">
            <form class="form-horizontal" method="post" action="//{{ server.http_host }}/account/password/" autocomplete="off">
                {% if "" != code %}
                    <input type="hidden" name="code" value="{{ code }}">
                {% endif %}
                <div class="form-group">
                    <label for="username" class="col-md-5 control-label">Gebruikersnaam</label>

                    <div class="col-md-7">
                        <p class="form-control-static">{{ accountData.getLogin() }}</p>
                    </div>
                </div>
                {% if "" == code %}
                    <div class="form-group">
                        <label for="old-password" class="col-md-5 control-label">Huidige wachtwoord</label>

                        <div class="col-md-7">
                            <input type="password" id="old-password" name="old-password" class="form-control"
                                   data-validate-url="/account/validate-password/"/>
                            <small class="help-block hide"></small>
                            <span class="form-control-feedback"></span>
                        </div>
                    </div>
                    <hr/>
                {% endif %}
                <div class="form-group">
                    <label for="new-password" class="col-md-5 control-label">Nieuw wachtwoord</label>

                    <div class="col-md-7">
                        <input type="password" id="new-password" name="new-password" class="form-control"
                               data-validate-url="/account/validate-password/"/>
                        <small class="help-block hide"></small>
                        <span class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="new-password2" class="col-md-5 control-label">Wachtwoord verificatie</label>

                    <div class="col-md-7">
                        <input type="password" id="new-password2" name="new-password2" class="form-control"
                               data-comparison="new-password" data-validate-url="/account/validate-password/"/>
                        <small class="help-block hide"></small>
                        <span class="form-control-feedback"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-7 col-md-offset-5">
                        <button type="submit" class="btn btn-primary">Wachtwoord wijzigen</button>
                        {% if "" == code %}
                            <a href="//{{ server.http_host }}/account/" class="btn btn-default pull-right">Annuleren</a>
                        {% endif %}
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
