{% set bouncers = 0 %}
{% set databases = 0 %}
{% set domains = 0 %}
{% for accountProduct in account.getAccountProducts() %}
    {% set product = accountProduct.getProduct() %}
    {% if 'bouncer' == product.getCategory() %}
        {% set bouncers = bouncers + 1 %}
    {% elseif 'database' == product.getCategory() %}
        {% set databases = databases + 1 %}
    {% elseif 'domain' == product.getCategory() %}
        {% set domains = domains + 1 %}
    {% endif %}
{% endfor %}
