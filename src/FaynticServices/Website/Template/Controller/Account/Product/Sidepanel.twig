            <span class="icon-anchor"></span>
            <a href="/account/product/domain/">Domeinen</a>
        </li>
        <li class="list-group-item">
            <span class="badge pull-right">{{ account.countAccountFtps()|default('0') }}</span>
            <span class="icon-folder"></span>
            <a href="/account/product/ftp/">FTP accounts</a>
