<div class="col-md-12">
    {% include 'Helper/Status.twig' %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="icon-vcard"></span>
            Klantgegevens
            <a class="btn btn-xs btn-primary pull-right" href="//{{ server.http_host }}/account/contact/">
                <span class="icon-wand2 icon-xs"></span> wijzigen</a>
        </div>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-3 control-label">Gebruikersnaam</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.getLogin() }} <a href="//{{ server.http_host }}/account/password/" class="btn btn-xs btn-link">wachtwoord wijzigen</a></p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Klantnummer</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.getId() }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Klant sinds</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.createdAt()|date("d-m-Y H:i:s") }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Taalvoorkeur</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.getLanguage().setLocale(locale).getName() }}</p>
                    </div>
                </div>
                <hr/>
                <div class="form-group">
                    <label class="col-md-3 control-label">Geslacht</label>

                    <div class="col-md-9">
                        {% if "male" == account.accountContact.gender %}
                            <p class="form-control-static"><span class="icon-male"></span> Man</p>
                        {% else %}
                            <p class="form-control-static"><span class="icon-female"></span> Vrouw</p>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Naam</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.getAccountContact().getName() }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Adres</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.getAccountContact.getAddress()|nl2br }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Land</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.getAccountContact.getCountry().setLocale(locale).getName() }}</p>
                    </div>
                </div>
                <hr/>
                <div class="form-group">
                    <label class="col-md-3 control-label">E-mail adres</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.getAccountContact.getEmail() }}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Telefoonnummer</label>

                    <div class="col-md-9">
                        <p class="form-control-static">{{ account.getAccountContact.getPhone()|default('-') }}</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
