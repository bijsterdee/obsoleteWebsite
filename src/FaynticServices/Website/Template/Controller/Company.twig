<div class="col-sm-6 col-md-8">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span class="icon-quill3"></span>
            Contact opnemen
        </div>
        <div class="panel-body">
            <form class="form-horizontal" method="post" action="//{{ server.http_host }}/contact/sendMessage/">
                <div class="form-group">
                    <label for="name" class="col-md-3 control-label">Naam</label>

                    <div class="col-md-9">
                        <input id="name" class="form-control" name="name"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-md-3 control-label">E-mail adres</label>

                    <div class="col-md-9">
                        <input id="email" class="form-control" name="email"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="message" class="col-md-3 control-label">Bericht</label>

                    <div class="col-md-9">
                        <textarea id="message" class="form-control" rows="3" name="message"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="btn-group col-md-9 col-md-offset-3">
                        <button class="btn btn-primary">Bericht versturen</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
